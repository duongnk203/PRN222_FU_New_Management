@model PRN222_Assignment_01.Models.Category

@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_LayoutStaff.cshtml";
}

<h1>Detail</h1>
@if (TempData["Message"] != null && !string.IsNullOrEmpty(TempData["Message"].ToString()))
{
    <div class="alert alert-danger">
        @TempData["Message"]
    </div>
}
<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CategoryName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoryName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CategoryDesciption)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoryDesciption)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class = "col-sm-10">
            @(Model.IsActive == true?"Active":"InActive")
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ParentCategory.CategoryName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ParentCategory.CategoryName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Update" asp-route-id="@Model?.CategoryID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
