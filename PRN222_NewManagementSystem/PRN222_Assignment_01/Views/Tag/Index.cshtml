@model IEnumerable<PRN222_Assignment_01.Models.Tag>

@{
    ViewData["Title"] = "Tag";
    Layout = "~/Views/Shared/_LayoutStaff.cshtml";
}

<h1>Tag</h1>

<p>
    <a asp-action="Create">Create New Tag</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TagName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Note)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TagName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Note)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TagID">Edit</a> |
                @* <a asp-action="Details" asp-route-id="@item.TagID">Details</a> | *@
                    <a asp-action="Delete" asp-route-id="@item.TagID" onclick="return confirm('Are you sure delete this tag?')">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
